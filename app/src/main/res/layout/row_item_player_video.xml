<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    >
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerInParent="true"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress_circular"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:id="@+id/btnPlay"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_play_circle_filled_black_24dp"
        android:padding="@dimen/side_margin"
        android:background="@drawable/round_button"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnShare"
        android:src="@drawable/ic_share_black_24dp"
        android:layout_alignEnd="@id/btnDownload"
        android:layout_alignRight="@id/btnDownload"
        android:layout_above="@id/btnDownload"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:background="@drawable/round_button"
        android:padding="@dimen/small_margin"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDownload"
        android:src="@drawable/ic_file_download_black_24dp"
        android:layout_alignEnd="@id/btnDelete"
        android:layout_above="@id/btnDelete"
        android:background="@drawable/round_button"
        android:layout_alignRight="@id/btnDelete"
        android:padding="@dimen/small_margin"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_button"
        android:padding="@dimen/small_margin"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/bottom_margin"
        />
</RelativeLayout>